                        },
                        formoptions:{ 
                            rowpos:1, 
                            label: "Nombre", 
                            elmsuffix:" (*)"
                        } 
                    },{ 
                        label:'Descripción',
                        name:'funcionesRol', 
                        index: 'funcionesRol',
                        width:400,
                        editable:true,
                        editoptions:{
                            size:50,
                            maxlength: 300
                        },
                        editrules:{
                            required:true
                        },
                        formoptions:{ 
                            rowpos:2, 
                            label: "Descripción", 
                            elmsuffix:" (*)"
                        }  
                    },{ 
                        label:'Rol Importador?',
                        name:'rolImportadorText', 
                        index: 'rolImportadorText',
                        editable:false
                    },{ 
                        label:'Rol Productor?',
                        name:'rolProductorText', 
                        index: 'rolProductorText',
                        editable:false
                    },{ 
                        label:'Rol Comprador?',
                        name:'rolCompradorText', 
                        index: 'rolCompradorText',
                        editable:false
                    },{ 
                        label:'Rol Vendedor?',
                        name:'rolCompVendText', 
                        index: 'rolCompVendText',
                        editable:false
                    },{ 
                        label:'Tipo Rol?',
                        name:'rolTipoText', 
                        index: 'rolTipoText',
                        width: 400,
                        editable:false
                    },{ 
                        label:'Rol Interno?',
                        name:'rolInternoText', 
                        index: 'rolInternoText',
                        editable:false
                    },{ 
                        label:'Rol Interno Tipo?',
                        name:'rolInternoTipoText', 
                        index: 'rolInternoTipoText',
                        width: 400,
                        editable:false
                    },{ 
                        name:'rolInterno', 
                        index: 'rolInterno',
                        hidden: true,
                        editable:true,
                        edittype:'checkbox',
                        editoptions: { 
                            value:"true:false",
                            dataEvents:[{
                                type:'change',
                                fn:function(e){
                                    adecuarRolInterno(true);
