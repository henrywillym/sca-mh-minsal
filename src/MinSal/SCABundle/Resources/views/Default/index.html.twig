    <body>   
    {% block javascripts %} 
            <script type="text/javascript" src="{{ asset('bundles/minsalsca/js/jquery-1.6.2.min.js') }}" ></script>
            <script type="text/javascript" src="{{ asset('bundles/minsalsca/js/jquery-ui-1.8.16.custom.min.js') }}"></script>
