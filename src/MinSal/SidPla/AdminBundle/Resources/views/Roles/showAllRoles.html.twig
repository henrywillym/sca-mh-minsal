                        index: 'rolImportador',
                        hidden: true,
                        editable:true,
                        edittype:'checkbox',
                        editoptions: { 
                            value:"true:false" 
                        },
                        formoptions:{
                            rowpos:5,
                            label: "Rol Importador?"
                        },
                        editrules:{
                            required:true,
                            edithidden: true
                        }
                    },{ 
                        name:'rolProductor', 
                        index: 'rolProductor',
                        hidden: true,
                        editable:true,
                        edittype:'checkbox',
                        editoptions: { 
                            value:"true:false" 
                        },
                        formoptions:{
                            rowpos:6,
                            label: "Rol Productor?"
                        },
                        editrules:{
                            required:true,
                            edithidden: true
                        }
                    },{ 
                        name:'rolComprador', 
                        index: 'rolComprador',
                        hidden: true,
                        editable:true,
                        edittype:'checkbox',
                        editoptions: { 
                            value:"true:false" ,
                            dataEvents:[{
                                    type:'change',
                                    fn: function(e){
                                        if($('rolComprador').is(':checked')){
                                            $('#rolCompVend').parent().parent().slideDown('slow');
                                        }else{
                                            $('#rolCompVend').removeAttr('checked').parent().parent().hide();
                                        }
                                    }
                                }
                            ]
                        },
                        formoptions:{
                            rowpos:7,
                            label: "Rol Comprador?"
                        },
                        editrules:{
